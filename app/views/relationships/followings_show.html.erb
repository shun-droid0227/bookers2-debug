			<!--フォローしている人一覧画面 -->
<div class="container">
	<div class ="row">
		<div class="col-xs-3">
			<h2>User info</h2>
			<%= render 'users/profile', user: @user %>
			<!--メモ　右側の指定に注意。そこを間違えるとエラーが発生して表示されない -->

			<h2>New book</h2>
			<%= render 'books/newform', book: @book %>
		</div>

		<div class="col-xs-9">
			<h2>Books index</h2>
			<!--books一覧 -->
			<table class="table table-hover table-inverse">
				<thead>
					<tr>
            <th></th>
						<th>Name</th>
						<th>Follow</th>
						<th>Follower</th>
						<th colspan="3"></th>
					</tr>
				</thead>

				<tbody>
          <% @user.followings.each do |f|%>
            <tr>
              <td>
                <%= link_to attachment_image_tag(f, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg"),user_path(f) %>
              </td>
              <td><%=link_to f.name,user_path(f) %></td>
              <td><%=link_to f.followings.count,following_path(f) %></td>
              <td><%=link_to f.followers.count,follower_path(f)%></td>
            </tr>
          <% end %>
				</tbody>
			</table>
			<!--books一覧 -->
		</div>
	</div>
</div>